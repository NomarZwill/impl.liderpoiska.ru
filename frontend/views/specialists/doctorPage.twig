          <div class="swiper-slide lizcenz_item" data-full-img="/images/uploaded/doctors/{{doc.doctor_id}}/lizcenz/{{lizcenz.filepath}}">
            <img src="/images/uploaded/doctors/{{doc.doctor_id}}/lizcenz/{{lizcenz.filepath}}" alt="">
          </div>

        {% endif %}

      {% endfor %}

      </div>

      <div class="swiper-pagination revolver_pagination"></div>

      <div class="revolver_navigation_wrapper">
        <div class="swiper-button-prev revolver_navigation"></div>
        <div class="swiper-button-next revolver_navigation"></div>
      </div>

    </div>

  </div>

  <div class="content_block doctor_education">

    <a name="education"></a>

    <h2>Образование</h2>

    <div class="doctor_education_content">
      {{doc.doctor_education | raw}}

