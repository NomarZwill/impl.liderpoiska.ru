<script>
  var player = [];
  
  function onYouTubePlayerAPIReady() {

    $('.doctor_video_item_wrapper').each(function(i, obj) {
      var currentVideoId = $(obj).find('.doctor_video').attr('id');
      player[i] = new YT.Player(currentVideoId, {
        videoId: currentVideoId,
        width: '808',
        height: '455',
      });
      $(obj).find('.play_button_wrapper .play_button').on('click', function() {
        player[i].playVideo();
        $(this).closest('.play_button_wrapper').addClass('_hidden');
      });

    });
