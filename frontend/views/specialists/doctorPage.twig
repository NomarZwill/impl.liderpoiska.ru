<div data-page-type="doctor_page">

  <div class="content_block doctor_preview">

    <div class="doctor_preview_bg">

      <div class="breadcrumbs_wrapper">

        <a class="breadcrumbs _menu_link" href="/">Центр Эстетической Стоматологии</a>
        <a class="breadcrumbs _menu_link" href="/specialists/">Специалисты</a>

      </div>
  
      <div class="doctor_preview_container">
  
        <div class="doctor_preview_wrapper">
  
          <h1>{{doc.doctor_title}}</h1>
      
          <div class="swiper-container specialities_wrapper">

            <div class="swiper-wrapper">
      
              {% for spec in doc.medicalSpecialties %}
        
                <a class="swiper-slide _menu_link" href="/speciality/{{spec.alias}}">{{spec.menu_title | raw}}</a>
        
              {% endfor %}
      
            </div>

          </div>

          <div class="doctor_image" style="background: url(/images/uploaded/doctors/{{doc.doctor_id}}/{{doc.doctor_image}}); background-size: cover;"></div>
  
          <div class="swiper-container clinics_wrapper">
  
            <div class="swiper-wrapper">

              {% for clinic in doc.doctorsAndClinics %}
        
                <div class="swiper-slide clinic_item">

                <a class="clinic_name _link_black" href="/contacts/{{clinic.alias}}">{{clinic.card_title | raw}}</a>
                <p class="clinic_address">{{clinic.clinic_address_short | raw}}</p>
                <div class="clinic_phone">
                  Тел.: {{clinic.main_phone | raw}}
                </div>
              </div>
        
              {% endfor %}
  
            </div>

            <div class="swiper-pagination revolver_pagination"></div>

            <div class="revolver_navigation_wrapper">
              <div class="swiper-button-prev revolver_navigation"></div>
              <div class="swiper-button-next revolver_navigation"></div>
            </div>
  
          </div>
      
          <button class="reception_button _button">Записаться на приём</button>
  
        </div>
    
      </div>

    </div>

  </div>

  <div class="content_block doctor_menu">

    <div class="chapter_link_container">
      
      <div class="chapter_link_wrapper">
        <a class="chapter_link _menu_link_dashed_black" href="#video">Видео</a>
      </div>
      <div class="chapter_link_wrapper">
        <a class="chapter_link _menu_link_dashed_black" href="#lizcenz">Сертификаты</a>
      </div>
      <div class="chapter_link_wrapper">
        <a class="chapter_link _menu_link_dashed_black" href="#education">Образование</a>
      </div>
      <div class="chapter_link_wrapper">
        <a class="chapter_link _menu_link_dashed_black" href="#work_example">Примеры работ</a>
      </div>

      {% if doc.reviews|length > 0 %}

        <div class="chapter_link_wrapper">
          <a class="chapter_link _menu_link_dashed_black" href="#reviews">Отзывы</a>
        </div>

      {% endif %}
      
    </div>
    
  </div>

  <div class="content_block doctor_video_container">
    <a name="video"></a>

    <div class="doctor_video_title">

      <h2>Видео о враче</h2>

    </div>

    <div class="swiper-container doctor_video_wrapper">

      <div class="swiper-wrapper">

      {% for video in doc.doctorsGalleries %}

        {% if video.block_type == 'video' %}

          <div class="swiper-slide doctor_video_item_container">

            <div class="doctor_video_item_wrapper">

              <div id="{{ video.filepath }}" class="doctor_video"></div>

              <div class="play_button_wrapper">
                <button class="play_button"></button>
              </div>

            </div>

          </div>

        {% endif %}

      {% endfor %}

      </div>

      <div class="swiper-pagination revolver_pagination"></div>

      <div class="revolver_navigation_wrapper">
        <div class="swiper-button-prev revolver_navigation"></div>
        <div class="swiper-button-next revolver_navigation"></div>
      </div>

    </div>

  </div>

