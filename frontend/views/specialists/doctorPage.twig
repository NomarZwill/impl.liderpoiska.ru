<div data-page-type="doctor_page">

  <div class="content_block doctor_preview">

    <div class="doctor_preview_bg">

      <ul class="breadcrumbs_wrapper" itemscope itemtype="https://schema.org/BreadcrumbList">

        <li class="breadcrumbs_item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a class="_menu_link_no_borders" href="/" itemtype="https://schema.org/Thing" itemprop="item">
            <span class="item_name" itemprop="name">Центр Стоматологической Имплантологии</span><span> → </span>
          </a>
          <meta itemprop="position" content="1" />
        </li>

        <li class="breadcrumbs_item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a class="_menu_link_no_borders" href="/specialists/" itemtype="https://schema.org/Thing" itemprop="item">
            <span class="item_name" itemprop="name"><span class="last_breadcrumb">✅</span> Стоматологи</span>
          </a>
          <meta itemprop="position" content="2" />
        </li>
        
      </ul>
  
      <div class="doctor_preview_container">
  
        <div class="doctor_preview_wrapper">
  
          <h1>{{doc.doctor_title}}</h1>
      
          <div class="swiper-container specialities_wrapper">

            <div class="swiper-wrapper">
      
              {% for spec in doc.medicalSpecialties %}
        
                <a class="swiper-slide _menu_link" href="/specialty/{{spec.alias}}/">{{spec.menu_title | raw}}</a>
        
              {% endfor %}
      
            </div>

          </div>

          <div class="doctor_image" style="background: url(/images/uploaded/doctors/{{doc.doctor_id}}/{{doc.doctor_image}}); background-size: cover;"></div>
  
          <div class="swiper-container clinics_wrapper">
  
            <div class="swiper-wrapper">

              {% for clinic in doc.doctorsAndClinics %}
        
                <div class="swiper-slide clinic_item">

                <a class="clinic_name _link_black" href="/contacts/{{clinic.alias}}/">{{clinic.card_title | raw}}</a>
                <p class="clinic_address">{{clinic.clinic_address_short | raw}}</p>
                <div class="clinic_phone">
                  Тел.: {{clinic.main_phone | raw}}
                </div>
              </div>
        
              {% endfor %}
  
            </div>

            <div class="swiper-pagination revolver_pagination"></div>

            <div class="revolver_navigation_wrapper">
              <div class="swiper-button-prev revolver_navigation"></div>
              <div class="swiper-button-next revolver_navigation"></div>
            </div>
  
          </div>
      
          <button class="reception_button _button">Записаться на приём</button>
  
        </div>
    
      </div>

    </div>

  </div>

  <div class="content_block doctor_menu">

    <div class="chapter_link_container">
      
      {% if doc.doctorsVideos|length > 0 %}

        <div class="chapter_link_wrapper">
          <a class="chapter_link _menu_link_dashed_black" href="#video">Видео</a>
        </div>

      {% endif %}

      {% if doc.doctorsLizenzes|length > 0 %}

        <div class="chapter_link_wrapper">
          <a class="chapter_link _menu_link_dashed_black" href="#lizcenz">Сертификаты</a>
        </div>

      {% endif %}

      {% if doc.doctor_education|length > 0 %}

        <div class="chapter_link_wrapper">
          <a class="chapter_link _menu_link_dashed_black" href="#education">Образование</a>
        </div>

      {% endif %}

      {% if draft|length > 0 %}

        <div class="chapter_link_wrapper">
          <a class="chapter_link _menu_link_dashed_black" href="#work_example">Примеры работ</a>
        </div>

      {% endif %}

      {% if doc.reviews|length > 0 %}

        <div class="chapter_link_wrapper">
          <a class="chapter_link _menu_link_dashed_black" href="#reviews">Отзывы</a>
        </div>

      {% endif %}
      
    </div>
    
  </div>

  {% if doc.doctorsVideos|length > 0 %}

  <div class="content_block doctor_video_container">
    <a name="video"></a>

    <div class="doctor_video_title">

      <h2>Видео о враче</h2>

    </div>

    {% if doc.doctorsVideos|length == 1 %}

      <div class="swiper-container doctor_video_wrapper _single_video">

        <div class="swiper-wrapper">

        {% for video in doc.doctorsVideos %}

          {% if video.block_type == 'video' %}

            <div class="doctor_video_item_container">

              <div class="doctor_video_item_wrapper">

                <div id="{{ video.filepath }}" class="doctor_video"></div>

                <div class="play_button_wrapper">
                  <button class="play_button"></button>
                </div>

              </div>

            </div>

          {% endif %}

        {% endfor %}

        </div>

      </div>

    {% elseif doc.doctorsVideos|length > 1 %}

      <div class="swiper-container doctor_video_wrapper">

        <div class="swiper-wrapper">

        {% for video in doc.doctorsVideos %}

          {% if video.block_type == 'video' %}

            <div class="swiper-slide doctor_video_item_container">

              <div class="doctor_video_item_wrapper">

                <div id="{{ video.filepath }}" class="doctor_video"></div>

                <div class="play_button_wrapper">
                  <button class="play_button"></button>
                </div>

              </div>

            </div>

          {% endif %}

        {% endfor %}

        </div>

        <div class="swiper-pagination revolver_pagination"></div>

        <div class="revolver_navigation_wrapper">
          <div class="swiper-button-prev revolver_navigation"></div>
          <div class="swiper-button-next revolver_navigation"></div>
        </div>

      </div>

    {% endif %}

  </div>

  {% endif %}

  {% if doc.doctorsLizenzes|length > 0 %}

  <div class="content_block doctor_lizcenz">

    <a name="lizcenz"></a>

    <h2>Сертификаты</h2>

    <div class="swiper_container lizcenz_wrapper">
  
      <div class="swiper-wrapper">

      {% for lizcenz in doc.doctorsLizenzes %}

        {% if lizcenz.block_type == 'lizcenz' %}

          <div class="swiper-slide lizcenz_item" data-full-img="/images/uploaded/doctors/{{doc.doctor_id}}/lizcenz/{{lizcenz.filepath}}">
            <img src="/images/uploaded/doctors/{{doc.doctor_id}}/lizcenz/thumbnail_{{lizcenz.filepath}}" alt="">
          </div>

        {% endif %}

      {% endfor %}

      </div>

      <div class="swiper-pagination revolver_pagination"></div>

      <div class="revolver_navigation_wrapper">
        <div class="swiper-button-prev revolver_navigation"></div>
        <div class="swiper-button-next revolver_navigation"></div>
      </div>

    </div>

  </div>

  {% endif %}

  {% if doc.doctor_education|length > 0 %}

  <div class="content_block doctor_education">

    <a name="education"></a>

    <h2>Образование</h2>

    <div class="doctor_education_content">
      {{doc.doctor_education | raw}}

      <div class="show_all _hidden">
        <button class="read_more">Показать полностью</button>
      </div>

    </div>

  </div>

  {% endif %}

  {{draft | raw}}

  {% if doc.reviews|length > 0 %} 

    <div class="content_block doctor_reviews" data-type="reviews_block">

      <a name="reviews"></a>

      <div class="reviews_title">
      
        <h2 class="_index_subtitle">Отзывы пациентов о хирургах-ортодонтах</h2>

        <div class="button_wrapper">

          <a href="/reviews/" class="_button _button_light _button_to_all _menu_link_no_borders_black"><span>Все отзывы</span> →</a>
    
          <button class="_button review_popup_button"><span>Добавить отзыв</span></button>

        </div>

      </div>

      <div class="swiper-container reviews_wrapper" data-type="reviews_block">

        <div class="swiper-wrapper">

          {% for review in doc.reviews %}
        
            <div class="swiper-slide review_item_wrapper">       
    
              <div class="big_quotes"></div>

              <hr>

              <div class="review_text" data-id="{{review.review_id}}">

                {{review.review_text | raw}}

                <div class="show_all _hidden">
                  <button class="read_more">Читать полностью</button>
                </div>

              </div>

              <p class="signature"><span>{{review.author}}</span> | <span>{{review.date}}</span></p>
    
            </div>
      
          {% endfor %}
      
        </div>

        <div class="swiper-pagination revolver_pagination"></div>

        <div class="revolver_navigation_wrapper">
          <div class="swiper-button-prev revolver_navigation"></div>
          <div class="swiper-button-next revolver_navigation"></div>
        </div>

      </div>

    </div>

  {% endif %}

</div>

<div class="popup_filter_bg">

  <div class="scroll_block">

    <div class="review_item_wrapper _hidden">
      
      <div class="close_icon"></div>  

      <div class="big_quotes"></div>
      
      <hr>

      <div class="review_text"></div>

      <p class="signature"></p>

      <div class="popup_close_button">Закрыть</div>       

    </div>

    <div class="popup_lizcenz_wrapper _hidden">
      
      <div class="close_icon"></div>       
      
      <div class="lizcenz_item_wrapper">
        <img src="/" alt="сертификат">
      </div>

      <div class="popup_close_button">Закрыть</div>       

    </div>

    <div class="popup_gallery_container _hidden">

      <div class="diagonal_navigation">

        <div class="diagonal_navigation_bg"></div>
        <div class="popup_button_prev _diagonal_navigation"></div>
        <span class="current_slide">01</span>
        <br>
        <span class="total_slides">03</span>
        <div class="popup_button_next _diagonal_navigation"></div>

      </div>

      <button class="popup_close_button">Закрыть</button> 

    </div> 

  </div>
  
</div>

<script src="//www.youtube.com/player_api"></script>

<script>
  var player = [];
  
  function onYouTubePlayerAPIReady() {

    $('.doctor_video_item_wrapper').each(function(i, obj) {
      var currentVideoId = $(obj).find('.doctor_video').attr('id');
      player[i] = new YT.Player(currentVideoId, {
        videoId: currentVideoId,
        width: '808',
        height: '455',
      });
      $(obj).find('.play_button_wrapper .play_button').on('click', function() {
        player[i].playVideo();
        $(this).closest('.play_button_wrapper').addClass('_hidden');
      });

    });
      // document.getElementById('pauseYoutube1').onclick = function() {play.pauseVideo();};
  };
</script>


