{% for item in faq %}

<div class="faq_item_wrapper">

  <div class="item_question">

    <p>{{item.faq_query | raw}}</p>

    <div class="arrow"></div>

  </div>

  <div class="item_answer _collapse">

    <p>{{item.faq_answer | raw}}</p>

    <div class="signature_wrapper">

      <div class="signature_image" style="background: url(/images/uploaded/doctors/{{item.doctor.doctor_id}}/{{item.doctor.doctor_image}}); background-size: cover;">
      </div>

      <div class="signature_text">

        <a class="_link_black" href="/specialists/{{item.doctor.alias}}">{{item.doctor.doctor_title}}</a>
        <p>
          {% for spec in item.doctor.medicalSpecialties %}

            {% if loop.last %}

              <span>{{spec.menu_title | raw}}</span>

            {% else %}

              <span>{{spec.menu_title | raw}}, </span>

            {% endif %}

          {% endfor %}
        </p>
        

      </div>

    </div>

  </div>

</div>

{% endfor %}
